@using  WebStory.Models

@model IEnumerable<Book>

@{
    ViewBag.Title = "Home Page";
}

<p>Список книг</p>
<table>
    <tr>
        <td><p>Название</p></td>
        <td><p>Автор</p></td>
        <td><p>Цена</p></td>
        <td></td>
    </tr>

    @foreach (var b in Model)
    {
        <tr>
            <td><p>@b.Name</p></td>
            <td><p>@b.Author</p></td>
            <td><p>@b.Price</p></td>
            <td><p><a href="/Home/Buy/@b.Id">Купить</a> <a href="/Home/EditBook/@b.Id">Редактировать</a><a href="/Home/Delete">Удалить</a> </p> </td>
        </tr>
    }


</table>
<a href="/Home/Create">Добавить книгу</a>
