@*@using  WebStory.Models*@

@model IEnumerable<WebStory.Models.Book>

@{
    ViewBag.Title = "Home Page";
}

<p>Список книг</p>
<table>
    <tr>
        <td><p>Название</p></td>
        <td><p>Автор</p></td>
        <td><p>Цена</p></td>
        <td></td>
    </tr>

    @foreach (WebStory.Models.Book b in Model)
    {
        <tr>
            <td><p>@b.Name</p></td>
            <td><p>@b.Author</p></td>
            <td><p>@b.Price</p></td>
            <td><p><a href="/Home/Buy/@b.Id">Купить</a> </p> </td>
        </tr>
    }


</table>